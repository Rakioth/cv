---
import SectionContainer from "@/components/SectionContainer.astro"
import { getLocaleByUrl, useTranslations } from "@/i18n"

const locale = getLocaleByUrl(Astro.url)
const t = useTranslations(locale)

const skills = [
	t("skills.0"),
	t("skills.1"),
	t("skills.2"),
	t("skills.3"),
	t("skills.4"),
	t("skills.5"),
	t("skills.6"),
	t("skills.7"),
	"SQL",
	"JavaScript",
	"Java",
	"Spring Boot",
	"Vue",
	"Astro",
	"Kotlin",
	"PowerShell",
	t("skills.8"),
	t("skills.9"),
]
---

<SectionContainer title={t("skills.title")}>
	<ul class="-mx-3 flex flex-wrap gap-1">
		{
			skills.map((skill) => (
				<li class="grow rounded-md bg-gray-700 px-2 py-1 text-center font-mono text-xs font-semibold text-white print:border print:border-gray-300 print:text-black">
					{skill}
				</li>
			))
		}
	</ul>
</SectionContainer>
