---
import LanguageItem from "@/components/LanguageItem.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import { getLocale, useTranslations } from "@/i18n"

const locale = getLocale(Astro.currentLocale)
const t = useTranslations(locale)

const languages = [
  {
    lang: t("languages.0.lang"),
    detail: t("languages.0.detail"),
  },
  {
    lang: t("languages.1.lang"),
    detail: t("languages.1.detail"),
  },
]
---

<SectionContainer title={t("languages.title")}>
  <ul class="-mx-3 flex flex-col gap-3 sm:flex-row">
    {
      languages.map((language) => (
        <li class="flex-1">
          <LanguageItem {...language} />
        </li>
      ))
    }
  </ul>
</SectionContainer>
