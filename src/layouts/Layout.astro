---
import { ViewTransitions } from "astro:transitions"

import SEO from "@/components/SEO.astro"
import type { Locale } from "@/i18n"
import CommandPalette from "@/sections/CommandPalette.astro"
import Header from "@/sections/Header.astro"
import "@fontsource-variable/newsreader"
import "@fontsource-variable/onest"

interface Props {
  lang: Locale
  title: string
  description: string
  image?: string
}

const { lang, title, description, image } = Astro.props
---

<!doctype html>
<html lang={lang} class="h-full">
  <head>
    <SEO title={title} description={description} image={image} />
    <ViewTransitions />
  </head>

  <body class="spacer min-h-full overflow-x-hidden p-6 md:p-12 print:p-14">
    <Header />
    <slot />
    <CommandPalette />
    <style is:global>
      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: none;
        scrollbar-gutter: stable;
      }

      .spacer {
        @apply flex flex-col gap-y-8 print:gap-y-6;
      }

      @media print {
        @page {
          margin: 0;
        }
      }

      @media screen and (prefers-reduced-motion: no-preference) {
        html {
          scroll-behavior: smooth;
        }
      }

      @supports selector(::-webkit-scrollbar) {
        ::-webkit-scrollbar {
          width: 0.675rem;
          border-radius: 0.675rem;
        }

        ::-webkit-scrollbar-thumb {
          @apply bg-black;
          border: 0.125rem solid transparent;
          border-radius: 0.675rem;
          background-clip: content-box;
        }

        ::-webkit-scrollbar-thumb:active {
          @apply bg-gray-500;
        }

        ::-webkit-scrollbar-track {
          background: var(--background-image);
        }

        ::-webkit-scrollbar-corner {
          background: var(--background-image);
        }
      }

      @supports not selector(::-webkit-scrollbar) {
        * {
          scrollbar-width: thin;
          scrollbar-color: black transparent;
        }
      }
    </style>
  </body>
</html>
